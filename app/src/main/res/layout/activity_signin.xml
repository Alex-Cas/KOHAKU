<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexandre.kohakuapp.SignInActivity"
    android:background="#8892ff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:background="#093f01">

        <Button
            android:id="@+id/goto_home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dbdbdb"
            android:singleLine="true"
            android:text="@string/goto_home_search"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/sign_in_status"
            android:layout_above="@+id/sign_in_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#c7c7c7" />

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="@string/sign_out_button"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/sign_in_button"
            android:layout_alignRight="@+id/sign_in_button"
            android:layout_alignEnd="@+id/sign_in_button" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="72dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/goto_home_search"
            android:layout_alignEnd="@+id/goto_home_search">



        </com.google.android.gms.common.SignInButton>
    </LinearLayout>

</RelativeLayout>
